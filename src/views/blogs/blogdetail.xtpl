{{extend ("../about.xtpl")}}

{{#block ("head")}}
<style>
  .detail-body {
    background-color: #fff;
  }
</style>
{{/block}}


{{#block ("body")}}
<div class="container detail-body">
  <div class="page-header">
    <h1>{{title}}</h1>
    <p><small> 作者：{{autor}} • {{create_at}}</small></p>
  </div>

  <article class="blog-text">
  {{{content}}}  
  </article>
</div>
{{/block}}